{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s: [%(levelname)s: %(name)s.%(funcName)s] %(message)s"
        },
        "friendly": {
            "format": "%(levelname)s: %(message)s"
        }

    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "friendly",
            "stream": "ext://sys.stdout"
        },

        "error_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARN",
            "formatter": "simple",
            "filename": "folderAudit_errors.log",
            "maxBytes": 10485760, 
            "backupCount": 5,
            "encoding": "utf8"
        }

    },

    "loggers": {
        "my_module": {
            "level": "INFO",
            "handlers": ["console"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "WARN",
        "handlers": ["console", "error_file"]
    }
}
